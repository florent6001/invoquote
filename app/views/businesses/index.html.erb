<div class="container">
  <h1>All your businesses</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>Name</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% current_user.businesses.each do |business| %>
        <tr>
          <td><%= business.name %></td>
          <td>
            <div class="btn-group">
              <%= link_to edit_business_path(business), class: "btn btn-primary" do %><i class="fa fa-pen mx-1"></i><% end %>
              <%= button_to business_path(business), method: "delete", data: { turbo_confirm: "The business will be deleted. Are you sure?" }, class: "btn btn-danger" do %>
                <i class="fa fa-trash mx-1"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
